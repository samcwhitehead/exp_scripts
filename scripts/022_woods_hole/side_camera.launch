<launch>
    

    <arg name="side_camera1_serial" default="16398831" />

    <arg name="calibrated" default="0" />

    <!-- ========================================================== -->
    <!-- Launch the cameras.                                        -->
    <!-- ========================================================== -->

    <group ns="side_camera_1">
      <node pkg="nodelet" 
            type="nodelet" 
            name="camera_nodelet_manager" 
            args="manager" />
      <node pkg="nodelet" 
            type="nodelet" 
            name="camera_nodelet"
            args="load pointgrey_camera_driver/PointGreyCameraNodelet camera_nodelet_manager" >
            <param name="frame_id" value="camera" />
            <param name="serial" value="16398831" />
		<param name="frame_rate_enable" value="True" />
		<param name="frame_rate" value="100" />
            <!-- param name="video_mode" value="format7_mode5" -->
            <param name="auto_exposure" value="false" />
            <param name="auto_shutter" value="false" />
            <param name="auto_gain" value="true" />
            <param name="gain" value="1" />
            <param name="enable_trigger" value="false" />
		<param name="trigger_mode" value="mode14" />
    
      <!-- Set ROI width and height -->
      <param name="format7_roi_width" value="400"/> 
      <param name="format7_roi_height" value="400"/> 
      <param name="format7_x_offset" value="130"/> 
      <param name="format7_y_offset" value="80"/>  
      
      
    <!-- modified                                        -->
            <!-- <param name="exposure" value="3000" /> -->
            <!-- shutter speed set to 2 ms faster than trigger rate -->
            <!-- param name="shutter_speed" value="0.003"  -->
    <!-- modified                                        -->
            <param name="shutter_speed" value="0.03" />
            <!-- Use the camera_calibration package to create this file -->
            <param name="camera_info_url" if="$(arg calibrated)"
              value="file://$(env HOME)/.ros/camera_info/$(arg side_camera1_serial).yaml" />

    </node>
    
  </group>
</launch>
